<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="web_quiz_engine" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>net.therap.webQuizEngine.model.User</class>
        <class>net.therap.webQuizEngine.model.Quiz</class>
        <class>net.therap.webQuizEngine.model.Question</class>
        <class>net.therap.webQuizEngine.model.Answer</class>
        <class>net.therap.webQuizEngine.model.Summary</class>
        <class>net.therap.webQuizEngine.model.History</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/web_quiz_engine"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.user" value="jinnjar"/>
            <property name="javax.persistence.jdbc.password" value="jinnjar"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>